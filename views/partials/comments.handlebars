<div class="comments">
  {{#each this}}
    <div class="card">
        <h3 class="c-header"></h3>
        <section class="comment c-body">
            <div class="text">
                {{comment_text}}
            </div>
            <div class="meta">
                -{{user.username}}, {{format_date created_at}}
            </div>
        </section>
    </div>
  {{/each}}
</div>